<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="classpath:nl/clockwork/ebms/admin/applicationConfig.embedded.xml"/>

	<import resource="classpath:nl/clockwork/ebms/cache.xml" />
	<import resource="classpath:nl/clockwork/ebms/datasource.xml" />
	<import resource="classpath:nl/clockwork/ebms/dao.xml" />
	<import resource="classpath:nl/clockwork/ebms/processor.xml" />

	<import resource="classpath:nl/clockwork/ebms/admin/dao.xml"/>

	<jaxws:endpoint implementor="#cpaService" address="/cpa" />

	<jaxws:endpoint implementor="#ebMSMessageService" address="/ebms">
		<jaxws:properties>
			<entry key="mtom-enabled" value="true" />
		</jaxws:properties>
	</jaxws:endpoint>

	<context:component-scan base-package="nl.clockwork.ebms.admin" />

	<bean class="org.springframework.beans.factory.config.MethodInvokingBean">
		<property name="staticMethod" value="org.springframework.util.Log4jConfigurer.initLogging" />
		<property name="arguments">
			<list>
				<value>${log4j.file}</value>
			</list>
		</property>
	</bean>

	<bean id="maxItemsPerPage" class="java.lang.Integer">
		<constructor-arg value="${maxItemsPerPage}"/>
	</bean>

	<bean id="cleoPatch" class="java.lang.Boolean">
		<constructor-arg value="${patch.cleo.enable}"/>
	</bean>

</beans>