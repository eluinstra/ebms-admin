				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<instrumentation>
						<ignores>
							<ignore>nl.clockwork.ebms.admin.dao.*</ignore>
						</ignores>
					</instrumentation>
					<systemProperties>
